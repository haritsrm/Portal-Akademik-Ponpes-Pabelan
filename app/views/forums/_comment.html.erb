<% if forums_logged_in? %>
<% f = current_forums %>
<div class="p-3">
	<%= form_tag do %>

    <div class="form-group">
      <%= hidden_field_tag :username, params[:username], class: 'form-control', value: f.username %>
    </div>

    <div class="form-group">
      <%= text_area_tag :body, params[:body], class: 'form-control', placeholder: 'Comment' %>
    </div>

    <%= submit_tag 'POST', class: 'btn btn-primary' %>
  <% end %>
</div>
<% end %>