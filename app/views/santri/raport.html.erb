<% santri = current_santri %>
<div class="raport-santri m-5">
	<%= form_tag(santri_raport_path, :method => "get", :class => 'form-row mx-5') do %>
      <%= select_tag(:thn_ajaran, options_for_select(kelas_collect), class: "form-control col-md-3", style: "height: 52px; margin-left: 25%;") %>
      <%= submit_tag 'Pilih', class: 'btn btn-primary col-md-3' %>
    <% end %>
	<legend>Nilai Raport</legend>
	<hr>
	<table class="table table-dark">
		<tr>
			<th>Mata Pelajaran</th>
			<th>Pengetahuan</th>
			<th>Keterampilan</th>
			<th>Sikap</th>
		</tr>
		<% @raport.each do |raport| %>
			<tr>
				<th><%= raport.mapel %></th>
				<td><%= raport.angka %></td>
				<td><%= raport.praktik %></td>
				<td><%= raport.huruf %></td>
			</tr>
		<% end %>
	</table>
</div>
<div class="kenaikan-kelas-santri m-5">
	<% @kenaikan.each do |k| %>
	<% if k.kenaikan != nil %>
	<legend>Kenaikan Kelas</legend>
	<hr>
		<% if k.kenaikan != "tidak naik kelas" %>
  	 		<div class="alert alert-success p-4"><center><h4>Naik ke kelas <%= params[:kelas] %> dengan predikat <%= k.kenaikan %></h4></center></div>
  	 	<% else %>
  	 		<div class="alert alert-danger p-4"><center><h4>Maaf anda tinggal di kelas <%= params[:kelas] %> dengan predikat <%= k.kenaikan %></h4></center></div>
  	 	<% end %>
	</table>
	<% end %>
	<% end %>
</div>
<div class="ekskul-santri p-5">
	<legend>Ekstrakulikuler</legend>
	<hr>
	<table class="table table-dark">
		<% @ekskul.each do |e| %>
		<tr>
			<td>e.nama_ekskul</td>
			<td>e.nilai</td>
		</tr>
		<% end %>
	</table>
</div>
</div>