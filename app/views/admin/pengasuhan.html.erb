<div class="p-5">
  <h1>Tabel Data Pengasuhan</h1>
  <button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#form-guru">Pengasuhan Baru
  </button>
  <div id="form-guru" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <!-- konten modal-->
      <div class="modal-content">
        <!-- heading modal -->
        <div class="modal-header">
          <h4 class="modal-title">Tambah Data Pengasuhan Baru</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <!--end heading modal-->
        <!-- body modal -->
        <div class="modal-body">
          <%= form_tag do %>
            <div class="form-row">
              <div class="col-md-6">
                <%= text_field_tag :username, params[:username], class: "form-control",  placeholder: "Username" %>
              </div>
              <div class="col-md-6">
                <%= password_field_tag :password, params[:password], class: "form-control", placeholder: "Password" %>
              </div>
            </div>
            <br>
            <%= text_field_tag :nama, params[:nama], class: "form-control",  placeholder: "Nama" %>
            <br>
            <%= select_tag(:jk, options_for_select([['Pria', 'Pria'], ['Wanita','Wanita']]), class: "form-control") %>
            <br>
            <%= text_field_tag :tempat, params[:tempat], class: "form-control", placeholder: "Tempat" %>
            <br>
            <%= text_field_tag :tl, params[:tl], class: "form-control", placeholder: "Tanggal Lahir" %>
            <br>
            <%= text_field_tag :alamat, params[:alamat], class: "form-control",  placeholder: "Alamat" %>
            <br>
            <%= text_field_tag :no_tlp, params[:no_tlp], class: "form-control", placeholder: "Telepon" %>
            </div>
            <br>
        </div>
        <!--end body modal-->
        <!-- footer modal -->
        <div class="modal-footer">
          <center><%= submit_tag 'Simpan', class: "btn btn-outline-primary" %></center>
        <% end %>
        </div>
        <!--end footer modal-->
      </div>
      <!--end konten modal-->
    </div>
  </div>
</div>
