  <% if forums_logged_in? %>
  <% f = current_forums %>
  <div class="m-3">
  		<% if f.username == comment.username %>
  		<div style="border: 5px dashed blue; background-color: white;">
  			<div class="m-3">
	  			<p><%= comment.body %></p>
	  			<hr>
	  			<p align="right">Created by <%= comment.username %>, at <%= time_ago_in_words(comment.created_at) %> ago</p>
	  		</div>
  		</div>
  		<% else %>
  			<div style="border: 5px dashed red; background-color: white;">
  			<div class="m-3">
	  			<p><%= comment.body %></p>
	  			<hr>
	  			<p align="right">Created by <%= comment.username %>, at <%= time_ago_in_words(comment.created_at) %> ago</p>
	  		</div>
  		</div>
  		<% end %>
  </div>
  <% else %>
  <div class="m-3">
  		<div style="border: 5px dashed red; background-color: white;">
  			<div class="m-3">
	  			<p><%= comment.body %></p>
	  			<hr>
	  			<p align="right">Created by <%= comment.username %>, at <%= time_ago_in_words(comment.created_at) %> ago</p>
	  		</div>
  		</div>
  </div>
  <% end %>